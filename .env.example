# Blockchain Configuration
BLOCKCHAIN_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
BLOCKCHAIN_RPC_URL=https://sepolia.hpp.io
BLOCKCHAIN_CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS_HERE

# Merkle Batching Configuration
# Batch size: Number of logs to accumulate before submitting to blockchain
BLOCKCHAIN_BATCH_SIZE=50

# Batch interval: Max time to wait before flushing batch (milliseconds)
BLOCKCHAIN_BATCH_INTERVAL_MS=60000

# Daily transaction budget: Maximum blockchain transactions per day
BLOCKCHAIN_MAX_TXS_PER_DAY=2000

# Adaptive batching: Automatically adjust batch size to stay within daily budget
# Set to 'false' to disable adaptive batching and use fixed BATCH_SIZE
BLOCKCHAIN_ADAPTIVE_BATCHING=true

# Optional: Store full request/response text (default: false, only stores hashes)
STORE_FULL_REQUEST_RESPONSE=false

# Kong Configuration
KONG_ADMIN_URL=http://localhost:8001
KONG_GATEWAY_URL=http://localhost:8000

# Admin Dashboard Authentication
# Change these credentials for production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Noosphere Router Endpoint (public URL for clients to use)
# This is the URL that will be shown in the dashboard for API access
# Examples:
#   - Local: http://localhost:8000
#   - Tailscale: http://your-hostname.tailXXXXX.ts.net:8000
#   - Public: https://api.yourdomain.com
NOOSPHERE_ROUTER_ENDPOINT_URL=http://localhost:8000

# Backend Configuration
BACKEND_URL=http://localhost:5872

# Database Configuration (shared with Kong)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kong
POSTGRES_USER=kong
POSTGRES_PASSWORD=kongpass

# LLM Provider API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Ollama Configuration (Local LLM) - OPTIONAL
# Set to your Ollama instance URL (can be local, Tailscale, or public IP)
# If not configured, /local-llm route will return 502 Bad Gateway (this is okay)
# Examples:
#   - Local: http://localhost:11434
#   - Tailscale: http://mac-studio.tailXXXXX.ts.net:11434
#   - LAN: http://192.168.1.100:11434
OLLAMA_BACKEND_URL=http://localhost:11434
OLLAMA_MODEL_NAME=llama3.1:70b
